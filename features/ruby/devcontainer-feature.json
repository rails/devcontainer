{
    "id": "ruby",
    "version": "1.1.1",
    "name": "Ruby (via rbenv)",
    "description": "Installs Ruby, rbenv, ruby-build and libraries needed to build Ruby",
    "customizations": {
        "vscode": {
            "extensions": [
                "shopify.ruby-lsp"
            ]
        }
    },
    "containerEnv": {
        "PATH": "/usr/local/share/rbenv/bin:${PATH}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "options": {
        "version": {
            "type": "string",
            "default": "3.3.4",
            "description": "The ruby version to be installed"
        }
    }
}
